  MeleeDamage 0
  MeleeRange 310
  States
  {
  Spawn: 
     TNT1 A 0
	 TNT1 A 0 A_Stop
	 TNT1 A 0 A_JumpIfInventory("CrowGroupFlee",1,"Pain")
	 TNT1 A 0 A_LookEx(LOF_NOSOUNDCHECK ,0,310,800,0,"Pain")
	 TNT1 A 0 A_StopSound(5)
