//Mapinfo

//Custom HUD
GameInfo {
	statusbarclass = "MinimalStatusBar"
}


//MAPAS
map NMAP01 "Mapa de prueba" //Cuando añades un MAPINFO, todas las cosas que agregues dentro del map se reflejará en el juego
{
	AllowRespawn
	Grinding_Polyobj
	Par = 20 //Par 20 sigfinica el tiempo que toma en finalizar el mapa. Aparece como speedrun al final de cada mapa
	Music = D_RUNNIN
	Next = NMAP02
	SecretNext = NMAP02
	Cluster = 20 //5 es el Cluster por defecto en DooM 2. Un cluster es básicamente una manera de agrupar los mapas. Se puede usar para crear episodios, por ejemplo una vez que llegas al Map05, habrá una pantalla intermission  con un texto.
	//Tambien se pueden usar los Clusters para hacer Hubs(*Investigar éste último).
	//En este caso, estoy setando el Cluster con un valor de 20 junto al Map02, sólo para agruparlos en un mismo valor
	
	//sky1 = "SKY1" la textura en UDB
	Sky1 = SkyP, 0.1 // Si cambias el nombre del Skybox, necesitarás cambiar el nombre del mismo en el apartado de OpenGL defs
		SkyRotate = 0.1, 0.1, 0.1
		
	/*weather = snow;
    intensity = 1;*/
}


map NMAP02 "Mapa de prueba 2"
{
	Next = NMAP01
	SecretNext = NMAP01
	AllowRespawn
	Grinding_Polyobj
	Cluster = 20
	Par = 20 //Par 20 sigfinica el tiempo que toma en finalizar el mapa. Aparece como speedrun al final de cada mapa
	Music = D_DOOM
	//Next = EndGame
}


//******CLUSTERS******//
///Acá añadimos nuestra definición de los Clusters
cluster 20
{
	Flat = "$BGFLAT11"
	Music = d_dm2ttl
	ExitText = "Prueba de ExitText con",
	"el grupo de mapas del Cluster 20"
}

//Texto del ending del mapa. En este caso no lo uso porque cambié el Cluster del grupo de mapas del 1 al 20
Cluster 1
{
	//Pic = INTERPIC
	Flat = TILE01
	Music = d_dm2ttl
	ExitText = "Texto de prueba que muestra el Exit test del juego"
}

//******EPISODIOS******//
//Definición de Episodios
Episode NMAP01
{
	Name = "Episodio 1 de prueba"
	Key = "E"
	
}

