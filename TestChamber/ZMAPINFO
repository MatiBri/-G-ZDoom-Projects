//Estas son las dificultades para los mapas en el juego

ClearSkills

skill baby
{
	name = "sos malo en los FPS"
	MustConfirm = "Estas seguro de jugar en este modo? Vas a caer muy bajo"
	HealthFactor = 2.0
	ArmorFactor = 2.0
	AmmoFactor = 2.0
	DropAmmoFactor = 2.0
	DamageFactor = 0.5
	SpawnFilter = baby
	MonsterHealth = 0.5
	Key = 1
}

skill easy
{
	name = "Y... la sabes remar"
	HealthFactor = 1.5
	ArmorFactor = 1.5
	AmmoFactor = 1.5
	DropAmmoFactor = 1.5
	SpawnFilter = easy
	MonsterHealth = 0.8
	Key = 2
}

skill normal
{
	Name = "No tenes miedo de disparar"
	HealthFactor = 1.0
	ArmorFactor = 1.0
	AmmoFactor = 1.0
	DropAmmoFactor = 1.0
	SpawnFilter = normal
	MonsterHealth = 1.0
	Key = 3
	DefaultSkill
}

skill hard
{
	Name = "Lo tuyo es matar"
	AmmoFactor = 1.5
	DamageFactor = 1.5
	SpawnFilter = hard
	MonsterHealth = 1.5
	MustConfirm = "Tenes las pelotas suficientes para jugar en este nivel de dificultad?"
	Key = 5
}

Skill nightmare
{
	Name = "DOOMSLAYER"
	AmmoFactor = 1.0
	DamageFactor = 2.0
	SpawnFilter = nightmare
	MonsterHealth = 2.0
	MustConfirm = "Te van a cagar a trompadas, estas seguro de continuar?"
	Key = 5
}

